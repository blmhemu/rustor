<!DOCTYPE html>
<html>
<head>
    <style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
</head>
<body>

<h2>Files</h2>


<table>
    <tr>
        <th>Name</th>
        <th>Type</th>
    </tr>
    <% for msg in &messages { %>
    <tr>
        <% if msg.is_dir == true { %>
            <td><a href="/web/ls?path=<%= msg.path %>"><%= msg.name %></a></td>
        <% } else { %>
            <td><a href="/api/download?path=<%= msg.path %>"><%= msg.name %></a></td>
        <% } %>
        <% if msg.is_dir == true { %>
            <td>Directory</td>
        <% } else { %>
            <td>File</td>
        <% } %>
    </tr>
    <% } %>
</table>

</body>
</html>
